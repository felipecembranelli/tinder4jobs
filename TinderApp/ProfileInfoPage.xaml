    <phone:PhoneApplicationPage.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal" />
    </phone:PhoneApplicationPage.FontFamily>
    <phone:PhoneApplicationPage.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal" />
    </phone:PhoneApplicationPage.FontSize>
    <phone:PhoneApplicationPage.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush" />
    </phone:PhoneApplicationPage.Foreground>
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<telerikPrimitives:RadSlideView Height="400"
                                        Margin="0"
                                        VerticalAlignment="Top"
                                        Background="Black"
                                        CacheMode="BitmapCache"
                                        IsLoopingEnabled="False"
                                        ItemTemplate="{StaticResource ImageSlideItemTemplate}"
                                        ItemsSource="{Binding Photos}" />-->
        <ScrollViewer Grid.Row="1"
                      Margin="0">
            <Grid Margin="12,0,12,24" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
           
                    <StackPanel Grid.Column="1" Grid.Row="1"
                            Margin="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        
                  
                    <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="#DE000000"
                           Style="{StaticResource PhoneTextAccentStyle}"
                           Text="{Binding DescriptionSnippet,
                                          Mode=OneWay}"
                           TextWrapping="Wrap" />
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="#DE000000"
                           Style="{StaticResource PhoneTextAccentStyle}"
                           Text="{Binding JobId,
                                          Mode=OneWay}"
                           TextWrapping="Wrap" />
           
                    <TextBlock HorizontalAlignment="Right"
                               FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                               Foreground="#DE000000"
                               Text="{Binding JobPosterName,
                                              Mode=OneWay}"
                               TextWrapping="Wrap" />
                    <TextBlock HorizontalAlignment="Right"
                               Foreground="#DE000000"
                               Text="{Binding LocationDescription,
                                              Mode=OneWay}"
                               TextWrapping="Wrap" />
                </StackPanel>
              
            </Grid>
        </ScrollViewer>
    </Grid>
</phone:PhoneApplicationPage>